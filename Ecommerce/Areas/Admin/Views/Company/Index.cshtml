@model List<Company>


<div class="container">
    <div class="row">
        <div class="col-6 pt-4">
            <h2 class="text-primary">Company list</h2>
        </div>

        <div class="col-6 text-end pt-4">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Create new Company
            </a>
        </div>

    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Compony Name</th>
            <th>StreetAddress</th>
            <th>City</th>
            <th>State</th>
            <th>PostalCode</th>
            <th>PhoneNumber</th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.StreetAddress</td>
                <td>@item.City</td>
                <td>@item.State</td>
                <td>@item.PostalCode</td>
                <td>@item.PhoneNumber</td>
                <td>
                    <div>
                        <a asp-route-CompanyId="@item.Id" class="btn btn-primary" asp-controller="Company" asp-action="Edit"><i class="bi bi-pencil-square"></i></a>

                        <a asp-route-CompanyId="@item.Id" class="btn btn-danger" asp-controller="Company" asp-action="Delete"><i class="bi bi-trash3-fill"></i></a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>


